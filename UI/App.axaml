<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="UI.App"
             xmlns:local="using:UI.Tools"
             RequestedThemeVariant="Default">

	<Application.DataTemplates>
		<local:ViewLocator/>
	</Application.DataTemplates>

	<Application.Styles>
		<FluentTheme />
	</Application.Styles>

	<Application.Resources>
		<ResourceDictionary>
			<Color x:Key="PrimaryColor">#0075ce</Color>
			<SolidColorBrush x:Key="ForegroundBrush" Color="White" />
			<SolidColorBrush x:Key="DarkTextBrush" Color="Black" />
			<!-- Additional colors and brushes -->
		</ResourceDictionary>
	</Application.Resources>
</Application>
