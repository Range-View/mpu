<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UI.Views.Components.Chart"
             x:Class="UI.Views.Layout.BodyView">
	<StackPanel Background="{DynamicResource PrimaryColor}">
		<StackPanel Margin="5" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="15">
			<Border Background="{DynamicResource ForegroundBrush}" CornerRadius="4" Padding="8">
				<TextBlock Text="{Binding Rows, StringFormat='Rows: {0}'}" FontSize="11" Foreground="{DynamicResource DarkTextBrush}" />
			</Border>
			<Border Background="{DynamicResource ForegroundBrush}" CornerRadius="4" Padding="8">
				<TextBlock Text="{Binding Cols, StringFormat='Cols: {0}'}" FontSize="11" Foreground="{DynamicResource DarkTextBrush}" />
			</Border>
			<Border Background="{DynamicResource ForegroundBrush}" CornerRadius="4" Padding="8">
				<TextBlock Text="{Binding MaxValue, StringFormat='Max: {0:F2}'}" FontSize="11" Foreground="{DynamicResource DarkTextBrush}" />
			</Border>
			<Border Background="{DynamicResource ForegroundBrush}" CornerRadius="4" Padding="8">
				<TextBlock Text="{Binding MinValue, StringFormat='Min: {0:F2}'}" FontSize="11" Foreground="{DynamicResource DarkTextBrush}" />
			</Border>
		</StackPanel>

		<local:PeakChartView DataContext="{Binding PeakChartViewModel}" />
		
	</StackPanel>
</UserControl>
